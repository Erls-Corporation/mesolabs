script(type='text/javascript')
  $(function() {
    var name = $('#name').text().trim();
    var socket = io.connect('http://mesolabs.no.de/' + name);
    socket.on('access', function(data) {
      console.log(data);
      if ($('.page').size() > 30) {
        $('.page:last').remove();
      }
      var user = data.user;
      var date = new Date(data.timestamp);
      $('#loading').hide();
      $('#pages').prepend(
        '<p class="page">' +
          '<a href="/' + user.name + '">' +
            '<img src="' + user.profile_url + '" style="float: left;"/>' + 
          '</a>' +
          '<span style="font-weight: bold">' + data.title + '</span> ' +
          '(<a href="' + data.url + '">' + data.url + '</a>)' +
          '<br /><span style="color: #AEAEAE;">' + date.toLocaleString() + '</span>' + 
        '</p>');
    });
  });
#name(style='display: none;')= name
h2= name
 |&nbsp;is watching these pages NOW.
#pages
  img#loading(src="/images/loading.gif")
